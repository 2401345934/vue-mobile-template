{
  "name": "vue-mobile-template",
  "private": true,
  "version": "1.0.3",
  "scripts": {
    "version": "# 修改 version  \n zx bump.mjs",
    "commit": "npm run version && npm run changelog && git add . && git cz ",
    "push": "npm run commit && git push origin HEAD",
    "start": "vite",
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "lint": "npm run lint:js && npm run lint:style",
    "lint:js": "eslint --ext .jsx ./src --fix",
    "lint:style": "stylelint src/**/*.{scss,wxss} --fix",
    "changelog": "conventional-changelog -p custom-config -i CHANGELOG.md -s -r 0",
    "prepare": "husky install",
    "preview": "vite preview"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,wxs}": [
      "prettier --config .prettierrc.js --write",
      "eslint --fix",
      "git add"
    ],
    "src/**/*.{wxss,scss}": [
      "prettier --config .prettierrc.js --write",
      "stylelint --fix --allow-empty-input",
      "git add"
    ]
  },
  "dependencies": {
    "axios": "^1.1.3",
    "pinia": "^2.0.23",
    "vant": "^3.6.5",
    "vue": "^3.2.41",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.2.0",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.40.0",
    "@vitejs/plugin-vue": "^3.2.0",
    "commitizen": "^4.2.5",
    "commitlint": "^17.2.0",
    "commitlint-config-cz": "^0.13.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.6.0",
    "husky": "^8.0.2",
    "less": "^4.1.3",
    "lint-staged": "^13.0.3",
    "postcss-px-to-viewport": "^1.1.1",
    "prettier": "^2.7.1",
    "prompts": "^2.4.2",
    "typescript": "^4.6.4",
    "unplugin-vue-components": "^0.22.9",
    "vite": "^3.2.3",
    "vue-tsc": "^1.0.9",
    "zx": "^7.1.1"
  }
}
